<form action="/update" method="POST">
  <input type="hidden" name="student_id" value="<%= student.StudentID %>">
  <label for="student_name">Student Name:</label>
  <input type="text" name="student_name" value="<%= student.StudentName %>">
  <label for="student_grade">Student Grade:</label>
  <input type="text" name="student_grade" value="<%= student.StudentGrade %>">
  <label for="average_mark">Average Mark:</label>
  <input type="text" name="average_mark" value="<%= student.AverageMark %>">
  <label for="gender">Gender:</label>
  <input type="text" name="gender" value="<%= student.StudentGender %>">
  <button type="submit">Update</button>
</form>
